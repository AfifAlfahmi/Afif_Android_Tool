#:import utils kivy.utils

<Dynamic>
    apk_path_anyl_et:apk_path_anyl_et


    FloatLayout:
        size_hint: None, None # <---
        size: root.width,self.parent.height

        pos_hint: {"center_x":0.3, "center_y":0.9}
        id:dynamicLayout
        opacity:1
        canvas.before:
            Color:
                #rgba: 1, 0.3, 0.2, 1
                rgb: utils.get_color_from_hex('#000000')
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Dynamic Analysis"
            font_size: '18dp'
            size_hint: None, None # <---
            pos_hint: {"x":0.5, "top":1.05}
        Button
            text: "Select Apk"
            pos_hint:{"center_x": .42,"y":.82}
            size:root.width*0.12,root.height*0.08
            id: uploadApkAnylBtn
            size_hint: None, None # <---
        TextInput:
            id: apk_path_anyl_et
            size:self.parent.width*0.25,self.parent.height*0.075
            size_hint: None, None # <---
            pos_hint: {"x":0.48, "y":.824 }
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        FloatLayout:

            canvas.before:
                Color:
                    #rgba: 1, 0.3, 0.2, 1
                    rgb: utils.get_color_from_hex('#e6f2ff')

                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [45]

            size:self.parent.width*0.7,self.parent.height*0.75
            pos_hint: {"x":0.20, "top":0.8}
            pos: self.pos
            size_hint: None, None # <---

            Label:
                id: separator
                size:root.width*0.7,self.parent.height
                size_hint: (None,None)
                pos_hint: {"x": .0,"y":.95}
                height: 6
                canvas:
                    Color:
                        rgb: 0., 0., 0.
                    Rectangle:
                        pos: self.pos
                        size: separator.width, 2
            Label:
                text: "Launchable Activities"
                bold: True
                font_size: '18dp'
                background_color:(0, 2, 5, 1)
                size_hint: None, None # <---
                color:(0, 0, 0, 1)
                pos_hint: {"center_x": .5,"center_y":.92}
                background_color:1,50,0,1



            GridLayout:
                id:activitiesLayout
                cols:3
                spacing:10
                color:(0, 0, 5, 1)

                size_hint: None, None # <---
                pos_hint: {"center_x": .5,"center_y":.75}
                size:root.width*0.55,self.parent.height*0.2




            Label:
                id: separator
                size:root.width*0.7,self.parent.height
                size_hint: (None,None)
                pos_hint: {"x": .0,"y":.55}
                height: 6
                canvas:
                    Color:
                        rgb: 0., 0., 0.

                    Rectangle:
                        pos: self.pos
                        size: separator.width, 2
            Label:
                text: "Receivers"
                bold: True
                font_size: '18dp'
                color:(0, 0, 0, 1)
                id:receiverLabel
                background_color:(0, 2, 5, 1)
                size_hint: None, None # <---
                pos_hint: {"center_x": .5,"center_y":.50}
            ScrollView:

                do_scroll_x: True
                do_scroll_y: True
                #size_hint: 1, None
                id:sclContainer
                scroll_type: ['bars', 'content']
                size_hint: None, None # <---
                size:root.width*0.55,self.parent.height*0.2
                pos_hint: {"center_x": .5,"center_y":.35}

                GridLayout:
                    id:receiversLayout
                    spacing:30
                    border: (10,10,10,10)

                    cols:3
                    size_hint: None, None # <---
                    size:root.width*0.55,self.parent.height*0.2
                    pos_hint: {"center_x": .5,"center_y":.35}
            Label:
                text: ""
                color:(0, 0, 0, 1)
                id:anal_progress_label
                size_hint: None, None # <---
                pos_hint: {"x":0.40, "center_y":0.30}

            ProgressBar:
                id: analysis_progress_bar
                #value: .25
                min: 0
                max: 100
                pos_hint:{"center_x": .5,"center_y":.25}
                size_hint_x: .4
                opacity:0

            Button
                text: "Analyze"
                pos_hint:{"center_x": .5,"y":.12}
                size:root.width*0.12,root.height*0.07
                id: analBtn
                size_hint: None, None # <---



















