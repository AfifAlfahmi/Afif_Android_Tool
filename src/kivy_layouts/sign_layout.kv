#:import utils kivy.utils

<Sign>
    keyPathET:keyPathET
    apk_path_et:apk_path_et

    signStorePass:signStorePass
    signAlias:signAlias
    signKeyPass:signKeyPass

    FloatLayout:
        size_hint: None, None # <---
        size: root.width,self.parent.height

        pos_hint: {"center_x":0.3, "center_y":0.9}
        id: signLayout
        canvas.before:
            Color:
                #rgba: 1, 0.3, 0.2, 1
                rgb: utils.get_color_from_hex('#000000')
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Sign Apk"
            size_hint: None, None # <---
            pos_hint: {"x":0.5, "top":1.05}
        FloatLayout:

            canvas.before:
                Color:
                    #rgba: 1, 0.3, 0.2, 1
                    rgb: utils.get_color_from_hex('#000000')
                Rectangle:
                    pos: self.pos
                    size: self.size
            size:self.parent.width*0.8,self.parent.height*0.88
            pos_hint: {"x":0.24, "top":0.9}
            pos: self.pos
            size_hint: None, None # <---
            Button
                text: "Select Apk"
                pos_hint:{"center_x": .17,"y":.75}
                size:root.width*0.12,root.height*0.1
                id: uploadApkBtn
                size_hint: None, None # <---
            TextInput:
                id: apk_path_et
                size:self.parent.width*0.45,self.parent.height*0.08
                size_hint: None, None # <---
                pos_hint: {"x":0.30, "y":.78}
            Label:
                text: "Test Sign"
                font_size:20
                pos_hint:{"center_x": .2,"y":.60}
                size_hint: None, None # <---
            Label:
                text: "Prod Sign"
                font_size:20
                pos_hint:{"center_x": .5,"y":.60}
                size_hint: None, None # <---

            CheckBox:
                id: testSignChBox
                group:"signType"
            #on_active: root.checkbox_click(self, self.active,"Pepperoni")
                pos_hint:{"center_x": .35,"y":.60}
                size_hint: None, None # <---
                canvas.before:
                    Color:
                        #rgba: 1, 0.3, 0.2, 1
                        rgb: utils.get_color_from_hex('#ff0080')
                    Rectangle:
                        pos:self.center_x-7, self.center_y-7
                        size: 20,20
            CheckBox:
                id: prodSignChBox
                group:"signType"
                #on_active: root.checkbox_click(self, self.active,"Pepperoni")
                pos_hint:{"center_x": .65,"y":.60}
                size_hint: None, None # <---
                canvas.before:
                    Color:
                        #rgba: 1, 0.3, 0.2, 1
                        rgb: utils.get_color_from_hex('#ff0080')
                    Rectangle:
                        pos:self.center_x-7, self.center_y-7
                        size: 20,20


            FloatLayout:
                id:prodSignLayout

                canvas.before:
                    Color:
                        #rgba: 1, 0.3, 0.2, 1
                        rgb: utils.get_color_from_hex('#000000')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size:self.parent.width*0.65,self.parent.height*0.48
                pos_hint: {"x":0.10, "top":0.66}
                pos: self.pos
                size_hint: None, None # <---

                Button
                    text: "Select key store"
                    pos_hint:{"center_x": .2,"y":.8}
                    size:root.width*0.15,root.height*0.05
                    id: selCertBtn
                    size_hint: None, None # <---


                TextInput:
                    id: keyPathET
                    font_size: 18
                    multiline: False
                    pos_hint: {"x": 0.42, "y":0.8}
                    size:self.parent.width*0.5,self.parent.height*0.15
                    size_hint: None, None # <---
                    #size_hint: 0.04, 0.03







                Label:
                    text:"store Pass: "
                    font_size: root.width*0.025

                    pos_hint: {"x":0.13, "top":0.75}
                    size: self.parent.width*0.15,self.parent.height*0.15
                    size_hint: None, None # <---


                TextInput:
                    id: signStorePass
                    font_size: 18
                    multiline: False
                    pos_hint: {"x": 0.42, "top":0.75}
                    size:self.parent.width*0.5,self.parent.height*0.15
                    size_hint: None, None # <---
                    #size_hint: 0.04, 0.03

                Label:
                    text:"Alias:"
                    font_size: root.width*0.025

                    pos_hint: {"x":0.13, "top":0.55}
                    size: self.parent.width*0.15,self.parent.height*0.15
                    size_hint: None, None # <---


                TextInput:
                    id: signAlias
                    font_size: 18
                    multiline: False
                    pos_hint: {"x": 0.42, "top":0.55}
                    size:self.parent.width*0.5,self.parent.height*0.15
                    size_hint: None, None # <---
                    #size_hint: 0.04, 0.03
                Label:
                    text:"keyPass: "
                    font_size: root.width*0.025

                    pos_hint: {"x":0.13, "top":0.35}
                    size: self.parent.width*0.15,self.parent.height*0.15
                    size_hint: None, None # <---


                TextInput:
                    id: signKeyPass
                    font_size: 18
                    multiline: False
                    password: True
                    pos_hint: {"x": 0.42, "top":0.35}
                    size:self.parent.width*0.5,self.parent.height*0.15
                    size_hint: None, None # <---
                    #size_hint: 0.04, 0.03
            Button
                text: "Sign"
                pos_hint:{"center_x": .5,"center_y":.1}
                size:root.width*0.15,root.height*0.05
                id: signApkBtn
                size_hint: None, None # <---
            Button
                text: "New Cert"
                pos_hint:{"center_x": .5,"center_y":.05}
                size:root.width*0.15,root.height*0.05
                id: newCertBtn
                size_hint: None, None # <---


